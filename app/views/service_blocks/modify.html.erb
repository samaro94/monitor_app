<div class="row justify-content-md-center">
  <div class="col-sm-offset-4 col-sm-4">

    <div id="edit_blocks" class="form-container card">
      <h3 class="text-center py-3 secondary-color"><%= @title %> <%= @service.name %></h3>

      <div class="card-body">

        <template v-for="(block, title) in blocks">
            <h5 class="text-capitalize">{{ title }}</h5>
            <div class="d-flex justify-content-between mt-2 mb-4">
                <div class="">
                  <label>From</label>
                  <input type="time" :value="block.from" @change="block.from = $event.target.value"></input>
                </div>

                <div class="">
                  <label>To</label>
                  <input type="time" :value="block.to" @change="block.to = $event.target.value"></input>
                </div>
            </div>
        </template>

        <div class="actions">
            <a href="/services" class="btn btn-secondary float-start">Cancelar</a>
            <button @click="sendData()" class="btn btn-primary secondary-color float-end">Actualizar</button>
        </div>

      </div>

    </div>

  </div>
</div>